{
  "name": "claude-taskboard",
  "version": "1.0.4",
  "description": "A real-time Kanban dashboard for TaskMaster AI projects - visual companion for AI-assisted development workflows",
  "type": "module",
  "bin": {
    "taskboard": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:cli",
    "build:cli": "tsc -p tsconfig.cli.json && chmod +x dist/cli/index.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest"
  },
  "keywords": [
    "taskmaster-ai",
    "taskmaster",
    "dashboard",
    "kanban",
    "task-management",
    "visualization",
    "cli",
    "real-time",
    "project-management",
    "ai-development",
    "claude",
    "cursor-ai",
    "ai-assistant",
    "mcp-server"
  ],
  "author": "Saikat Roy <5454155+shokks@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shokks/taskboard.git"
  },
  "homepage": "https://github.com/shokks/taskboard#readme",
  "bugs": {
    "url": "https://github.com/shokks/taskboard/issues"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.0.0",
    "express": "^4.19.2",
    "lucide-react": "^0.536.0",
    "open": "^10.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
